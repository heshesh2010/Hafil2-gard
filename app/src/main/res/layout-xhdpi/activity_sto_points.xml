
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".DartboardActivity" >

    <RelativeLayout
        android:id="@+id/game_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons"
        android:layout_alignParentTop="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="10dp"
            android:text="اسم المستخدم"
            android:textColor="@color/FontColorLogin"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/button5"
            android:layout_marginTop="10dp"
            android:text="رقم اللوحة"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/FontColorLogin"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="10dp"
            android:text="إسم السائق"
            android:textColor="@color/FontColorLogin"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignRight="@+id/editText1"
            android:gravity="right"
            android:text=""
            android:textColor="@color/FontColorLogin"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_alignRight="@+id/textView1"
            android:text="رقم الشركه"
            android:textColor="@color/FontColorLogin"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button1"
            android:ems="8"
            android:hint="رقم الوزارة"
            android:inputType="number"
            android:textColor="@color/FontColorLogin"
            android:textCursorDrawable="@null"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/TextView3"
            android:layout_marginTop="10dp"
            android:text="إسم المدرسة"
            android:textColor="@color/FontColorLogin"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TextView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignRight="@+id/editText1"
            android:gravity="right"
            android:text=""
            android:textColor="@color/FontColorLogin"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/TextView4"
            android:layout_alignRight="@+id/editText1"
            android:gravity="right"
            android:text=""
            android:textColor="@color/FontColorLogin"
            android:textSize="20sp" />

                <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignRight="@+id/editText1"
            android:gravity="right"
            android:text=""
            android:textColor="@color/FontColorLogin"
            android:textSize="20sp" />
                
        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/TextView4"
            android:layout_marginTop="10dp"
            android:text="العنوان"
            android:textColor="@color/FontColorLogin"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TextView01"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignRight="@+id/editText1"
            android:gravity="right"
            android:text=""
            android:textColor="@color/FontColorLogin"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText2"
            android:layout_below="@+id/button01"
            android:ems="8"
            android:hint="رقم الشركة"
            android:inputType="number"
            android:textColor="@color/FontColorLogin"
            android:textCursorDrawable="@null"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText2"
            android:layout_alignRight="@+id/textView1"
            android:layout_alignTop="@+id/editText2"
            android:text="رقم الوزارة"
            android:textColor="@color/FontColorLogin"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/TextView02"
            android:layout_below="@+id/editText1"
            android:background="@drawable/line" />

        <Button
            android:id="@+id/button01"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/editText2"
            android:layout_alignBottom="@+id/editText2"
            android:layout_toLeftOf="@+id/editText2"
            android:background="@drawable/search"
            android:textColor="@color/FontColorLogin" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/editText1"
            android:layout_alignBottom="@+id/editText1"
            android:layout_alignLeft="@+id/button5"
            android:layout_marginLeft="169dp"
            android:background="@drawable/search"
            android:textColor="@color/FontColorLogin" />

        <ListView
            android:id="@+id/android:list"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@+id/editText3"
             android:layout_marginBottom="16dp" >
        </ListView>

                 <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@+id/TextView01"
                android:layout_toLeftOf="@+id/TextView03"
                android:layout_marginTop="10dp"
                android:layout_alignRight="@+id/editText1"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:button="@null"
                    android:drawableRight="@drawable/checkbox_background"
                    android:text="الثاني"
                    android:textColor="@color/FontColorLogin"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="true"
                    android:drawableRight="@drawable/checkbox_background"
                    android:text="الأول"
                    android:textColor="@color/FontColorLogin"
                    android:textSize="20sp" />
                </RadioGroup>
                
        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/TextView3"
            android:layout_below="@+id/radioGroup1"
            android:layout_marginBottom="19dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/addpoint" />


                
        <EditText
            android:id="@+id/editText3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button4"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/TextView01"
            android:text="الرد"
            android:layout_marginTop="10dp"
            android:textColor="@color/FontColorLogin"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#333"
        android:orientation="horizontal" >

        
        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:background="@drawable/sync" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/save" /> 
                    
    </LinearLayout>

</RelativeLayout>