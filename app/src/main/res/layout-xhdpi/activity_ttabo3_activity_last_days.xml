
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".DartboardActivity" >

    <RelativeLayout
        android:id="@+id/game_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons"
        android:layout_alignParentTop="true"
        
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

  
    

    <TextView
        android:id="@+id/textView1"
        android:textColor="@color/FontColorLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="فحص جهاز التتبع"
        android:textSize="25sp" />

    <RadioGroup
    android:id="@+id/radioGroup1"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
           android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">


                    
            <RadioButton
        android:id="@+id/radio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/checkbox_background"
        android:button="@null"
        android:textColor="@color/FontColorLogin"
        android:textSize="20sp"
        android:text="لايعمل" />
            
    <RadioButton
        android:id="@+id/radio0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/checkbox_background"
        android:button="@null"
         
        android:textSize="20sp"
        android:layout_gravity="right"
        android:textColor="@color/FontColorLogin"
        android:text="يعمل" />



</RadioGroup>
<EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_below="@+id/textView1"
        android:ems="10"
        android:layout_marginTop="30dp"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

<ImageView
        android:id="@+id/imageView1"
    android:layout_width="300dp"
    android:layout_height="200dp"
        android:layout_below="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp"
         android:contentDescription="صورة"
        android:scaleType="fitXY"/>
    
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="#333"
            android:orientation="horizontal" >

        <Button
                android:id="@+id/button11"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".9"
                android:visibility="invisible"
                android:background="@drawable/gallery" />

        <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".9"
                android:background="@drawable/gallery" />

        <Button
                android:id="@+id/button2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/camera" />

        <Button
                android:id="@+id/Button3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/syncoff" />



        <Button
                android:id="@+id/button4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/save" />

        <Button
                android:id="@+id/button14"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".9"
                android:visibility="invisible"
                android:background="@drawable/gallery" />



    </LinearLayout>

</RelativeLayout>